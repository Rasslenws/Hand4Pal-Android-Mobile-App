<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp"
    android:backgroundTint="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgCampaign"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_gradient_placeholder"
            app:shapeAppearanceOverlay="@style/RoundedImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Nom Auteur / Association -->
        <TextView
            android:id="@+id/txtAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Association Name"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/imgCampaign"
            app:layout_constraintTop_toTopOf="@id/imgCampaign" />

        <!-- Date (ID: txtDate) -->
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="May 20, 2024"
            android:textSize="12sp"
            android:textColor="#888888"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txtAuthor" />

        <!-- Titre (ID: txtTitle) -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Help flood victim"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/txtAuthor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtAuthor" />

        <!-- Progress Bar (ID: progressBar) -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:progress="50"
            android:progressTint="#107C41"
            android:backgroundTint="#E0E0E0"
            app:layout_constraintStart_toStartOf="@id/txtAuthor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtTitle" />

        <!-- Label "Raised" -->
        <TextView
            android:id="@+id/lblRaised"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raised"
            android:textSize="10sp"
            android:textColor="#888888"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/progressBar"
            app:layout_constraintTop_toBottomOf="@id/progressBar" />

        <!-- Montant CollectÃ© (ID: txtRaised) -->
        <TextView
            android:id="@+id/txtRaised"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$2,400"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@id/lblRaised"
            app:layout_constraintTop_toBottomOf="@id/lblRaised" />

        <!-- Label "Target" -->
        <TextView
            android:id="@+id/lblTarget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target"
            android:textSize="10sp"
            android:textColor="#888888"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/lblRaised" />

        <!-- Note : Vous n'avez pas mis txtTarget dans l'adapter, donc je ne le mets pas ici ou je le laisse statique -->

        <!-- Votre Don (ID: txtUserDonation) -->
        <TextView
            android:id="@+id/txtUserDonation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have donated $20"
            android:textSize="12sp"
            android:textColor="#555555"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtRaised"
            app:layout_constraintBottom_toBottomOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
